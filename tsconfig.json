{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue","packages/**/*","packages/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": false,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "@nv/*": ["./packages/*"]
    },
    "lib": ["ES2017"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
